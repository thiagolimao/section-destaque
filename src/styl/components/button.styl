/*--------------------------------------------------------------
# Components Button
--------------------------------------------------------------*/
.btn
  font-weight: $fw-bold
  letter-spacing: 0
  border-width: .5rem
  font-size: 1.5rem
  padding: 0.5rem
  text-decoration: none
  &.btn-white
    background-color: $white
    border-color: $white
    color: $primary
    border-radius: 0.3rem
    @media (max-width: 992px)
      background-color: $primary
      border-color: $primary
      color: $white
    &:hover,
    &:active,
    &:not(:disabled):not(.disabled):active
      background-color: $primary
      border-color: $primary
      color: $white
      @media (max-width: 992px)
        background-color: $white
        border-color: $primary
        color: $primary