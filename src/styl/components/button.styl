/*--------------------------------------------------------------
# Components Button
--------------------------------------------------------------*/
.btn
  font-weight: $fw-bold
  letter-spacing: 0
  border-width: .5rem
  font-size: 1.5rem
  padding: 0.5rem
  text-decoration: none
  &.btn-primary
    background-color: $primary
    border-color: $primary
    color: $white
    border-radius: 0
    &:hover,
    &:active,
    &:not(:disabled):not(.disabled):active
      background-color: $secondary
      border-color: $secondary
      color: $white