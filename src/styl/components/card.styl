
.card{
    &.card-course{
        background-color: $primary
        border: none
        width: 100%
        height: 100%
        padding: 0
        justify-content: flex-end
        border-radius: 0.8rem
        position: relative
        overflow: hidden
        cursor: pointer
            &:after{
                content: ""
                // background: rgb(0,0,0);
                background: linear-gradient(0deg, rgba(0,0,0,1) 10%, rgba(255,255,255,0) 100%);

                position: absolute
                top: 0
                left: 0

                width: 100%
                height: 100%
                display: block
            }

        img {
            object-fit: cover
            position: relative
        }
        
        .card-header{
            background-color: transparent
            border: none
            padding: 0

            position: relative
            .title-course{
                position: absolute
                bottom: 0;
                left: 0
                width: 100%;
                z-index: 3
            }
        }
        .card-footer{
            border: none
            position: initial
            align-items: center
            justify-content: center
            background-color: transparent
            padding: 0
            z-index: initial
            width: 100%
            display: flex
            
            transition: 0.25s ease background
            background-color: transparent
            border-radius: 0.4rem
            z-index: 2
        }
    }
}